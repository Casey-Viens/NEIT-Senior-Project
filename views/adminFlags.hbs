{{>adminLeftNav}}
{{!-- Full body right of nav --}}
<div class="ml-32 min-h-screen bg-ks-light-background dark:bg-ks-dark-background">
    {{!-- Spot for top nav --}}
    {{> topNav}}
    {{!-- Main Content Body --}}
    <div class="flex flex-col min-h-screen w-full items-center space-y-4 py-20">
        {{!-- Start Handlebars Loop here. --}}
        {{#if flaggedStamps}}
        {{#each flaggedStamps}}
        {{!-- &userQuery={{formData}} --}}
        <a href="/artifactViewer?id={{stampID}}" class="flex flew-col w-10/12 space-y-1">
            <div class="flex flew-row w-full space-x-2">
                <div class="flex flex-col w-1/4">
                    {{{thumbnail formatType location thumbnail}}}
                </div>
                <div class="flex flex-col w-3/4">
                    <h2 class="text-2xl text-ks-light-text dark:text-ks-dark-text flex flex-row items-center"><svg
                            xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-red-500" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
                        </svg> {{artifactTitle}}</h2>
                    <h3 class="text-base text-ks-light-subText dark:text-ks-dark-subText">{{author}} - {{views}} Views
                    </h3>
                    <h3 class="text-sm text-ks-light-subText dark:text-ks-dark-subText">{{description}}</h3>
                    <div class="flex flex-row text-white space-x-2 space-y-2 pt-2 flex-wrap min-w-fit">
                        {{#each categories}}
                        <div
                            class="flex flex-row rounded-full py-1 px-2 space-x-1 flex-wrap min-h-fit min-w-fit {{#if isMatched}} bg-violet-700 {{else}} bg-violet-500  {{/if}}">
                            <p class="px-1 min-h-fit min-w-fit">{{catLabel}}</p>
                            {{#each tags}}
                            <p
                                class="rounded-full px-2 min-h-fit min-w-fit {{#if isMatched}} bg-blue-700 {{else}} bg-blue-500 {{/if}}">
                                {{tagLabel}}</p>
                            {{/each}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </a>
        {{/each}}

        {{!-- end default load --}}
        {{else}}
        <h2 class="text-ks-light-text dark:text-ks-dark-text my-auto text-2xl">There are currently no flagged artifacts.
            Congratulations.</h2>
        {{/if}}
    </div>
</div>