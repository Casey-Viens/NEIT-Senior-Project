<div
    class="fixed overflow-y-auto overflow-x-hidden top-0 left-0 h-screen w-32 border-r-2 text-lg font-medium flex flex-col justify-items-center items-center text-ks-light-text dark:text-ks-dark-text bg-ks-light-foreground border-ks-light-border dark:bg-ks-dark-foreground dark:border-ks-dark-border">

    <img src="./images/HeroIcon.png" alt="Hero Icon For Knowledge Stitcher Application" width="100" class="m-2">

    <p class="text-center">Knowledge Stitcher</p>

    <a href="searchPage"
        class="w-full flex flex-col justify-items-center items-center py-2 {{#if activePageSearch}} bg-ks-light-foregroundActive dark:bg-ks-dark-foregroundActive {{/if}} hover:bg-ks-light-foregroundHover dark:hover:bg-ks-dark-foregroundHover">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"
            stroke-width="1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            <p>Search</p>
        </svg>
    </a>

    <a href="adminUpload"
        class="w-full flex flex-col justify-items-center items-center py-2 {{#if activePageAdminUpload}} bg-ks-light-foregroundActive dark:bg-ks-dark-foregroundActive {{/if}} hover:bg-ks-light-foregroundHover dark:hover:bg-ks-dark-foregroundHover">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"
            stroke-width="1">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
            <p>Upload</p>
        </svg>
    </a>

    <a href="adminTickets"
        class="w-full flex flex-col justify-items-center items-center py-2 {{#if activePageAdminTickets}} bg-ks-light-foregroundActive dark:bg-ks-dark-foregroundActive {{/if}} hover:bg-ks-light-foregroundHover dark:hover:bg-ks-dark-foregroundHover">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"
            stroke-width="1">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
        </svg>
        <p>Tickets</p>
    </a>

    <a href="adminFlags"
        class="w-full flex flex-col justify-items-center items-center py-2 {{#if activePageAdminFlags}} bg-ks-light-foregroundActive dark:bg-ks-dark-foregroundActive {{/if}} hover:bg-ks-light-foregroundHover dark:hover:bg-ks-dark-foregroundHover">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"
            stroke-width="1">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
        </svg>
        <p>Flags</p>
    </a>

    <a href="adminTagManagement"
        class="w-full flex flex-col justify-items-center items-center py-2 {{#if activePageAdminTagManagement}} bg-ks-light-foregroundActive dark:bg-ks-dark-foregroundActive {{/if}} hover:bg-ks-light-foregroundHover dark:hover:bg-ks-dark-foregroundHover">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"
            stroke-width="1">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>
        <p>Tags</p>
    </a>

    <a href="dataAnalytics"
        class="w-full flex flex-col justify-items-center items-center py-2 {{#if activePageDataAnalytics}} bg-ks-light-foregroundActive dark:bg-ks-dark-foregroundActive {{/if}} hover:bg-ks-light-foregroundHover dark:hover:bg-ks-dark-foregroundHover">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"
            stroke-width="1">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <p>Analytics</p>
    </a>

    <a href=""
        class="mt-auto w-full flex flex-col justify-items-center items-center py-2 hover:bg-ks-light-foregroundHover dark:hover:bg-ks-dark-foregroundHover">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"
            stroke-width="1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11 19l-7-7 7-7m8 14l-7-7 7-7" />
        </svg>
        <p>Minimize</p>
    </a>

    <div class="flex flex-row w-full justify-center py-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"
            stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>

        <label class="relative inline-block w-12 h-6 mx-1">
            <input type="checkbox" class="opacity-0 w-0 h-0 peer" {{#if isDarkMode}} checked {{/if}}
                onchange="toggleDarkMode()">
            <span
                class="absolute cursor-pointer top-0 left-0 right-0 bottom-0 border rounded-full 
                before:rounded-full before:absolute before:h-4 before:w-4 before:left-1 before:bottom-1 before:content-['']
                transition ease-in-out peer-checked:before:translate-x-6 duration-300 before:transition before:ease-in-out before:duration-300
                before:bg-ks-light-text before:dark:bg-ks-dark-text border-ks-light-text dark:border-ks-dark-text"></span>
        </label>

        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"
            stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
    </div>
    <form action="/logout?_method=DELETE" method="POST">
        <button type="submit" class="mb-5 bg-red-500 hover:bg-red-700 text-white rounded-lg px-3 py-1">Log Out</button>
    </form>

</div>

<script>
    function toggleDarkMode() {
        document.getElementById('body').classList.toggle('dark')
        fetch('/toggleDarkMode', {
            method: 'GET',
            headers: {
                'Content-type': 'application/json'
            },
        }).then((res) => {
            // console.log(res)
        })
    }
</script>