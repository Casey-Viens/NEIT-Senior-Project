<div class="bg-gray-300 flex flex-col justify-items-center items-center min-h-screen">
    <img src="./images/LogInPageIcon.png" alt="Log In Page Knowledge Stitcher Icon" width="729" class="mt-8 mb-5">
    <form action="/index" method="POST" class="mx-auto flex flex-col w-80 space-y-3">
        <div>
            <label for="username">Username</label>
            <input type="text" name="username" id="username" required
                class="w-full px-3 py-1 border rounded-md border-gray-500">
        </div>
        <div>
            <label for="password">Password</label>
            <input type="password" name="password" id="password" required
                class="w-full px-3 py-1 border rounded-md border-gray-500">
        </div>
        <button type="submit" class="ml-auto px-3 py-1 rounded-lg bg-green-500 hover:bg-green-700 text-white">Log
            In</button>
    </form>

    {{#if messages.error}}
    <h2 style="color:red">{{messages.error}}</h2>
    {{/if}}

    <footer class="flex flex-col text-center justify-center items-center bg-slate-400 w-full py-2 space-y-2 mt-auto">
        <h3>SE425 Senior Project: Knowledge Stitcher<br> By: Casey Viens & George Saban Jr.
        </h3>
        <a href="https://se414-wiki.herokuapp.com/" class="text-sky-600 hover:text-sky-800">Project Wiki</a>
    </footer>
</div>