{{>adminLeftNav}}
<div
    class="ml-32 min-h-screen text-ks-light-text dark:text-ks-dark-text bg-ks-light-background dark:bg-ks-dark-background">
    {{>topNav}}
    <div class="w-full min-h-screen flex flex-row justify-around">
        <div class="my-auto flex flex-col justify-items-center items-center content-center">
            <h2 class="mb-2 text-lg font-medium">Submit Link</h2>
            <form action="/adminUploadPageLinkPOST" method="post"
                class="p-4 rounded-lg border border-ks-light-border dark:border-ks-dark-border flex flex-col bg-ks-light-foreground dark:bg-ks-dark-foreground">
                <label for="link" class="font-medium">Youtube Link:</label>
                <input type="text" name="link" id="link" size="50"
                    placeholder="https://www.youtube.com/watch?v=Jsiy4TxgIME"
                    class="text-sm px-3 py-1 rounded-md border text-ks-light-text border-ks-light-border dark:border-ks-dark-border">
                <button type="submit"
                    class="mt-3 mx-auto rounded-full bg-blue-500 hover:bg-blue-700 text-white px-3 py-1">Submit</button>
            </form>
        </div>
        <div class="my-auto flex flex-col justify-items-center items-center">
            <h2 class="mb-2 text-lg font-medium">Upload File</h2>
            <form action="/adminUploadPageAWSPOST" method="post" enctype="multipart/form-data" style="width: 350px; height:200px;"
                class="rounded-lg border border-dashed items-center justify-center border-ks-light-border dark:border-ks-dark-border flex flex-col bg-ks-light-foreground dark:bg-ks-dark-foreground">

                <span role="button"
                    class="relative w-full h-full inline-flex text-center items-center justify-center flex-col">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor" stroke-width="1">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                    </svg>
                    <p class="font-medium">Drag & Drop</p>
                    <p>or</p>
                    <p class="font-medium">Click to Browse Files</p>
                    <button type="submit" id="fileSubmitButton"
                        class="z-20 mt-3 mx-auto rounded-full bg-blue-500 hover:bg-blue-700 text-white px-3 py-1">Submit</button>
                    {{!-- .doc,.docx,.mp3  --}}
                    <input type="file" id="file" name="artifactToUpload" accept=".mp4,.pdf,.png"
                        oninput="clickSubmit()"
                        class="text-center items-center justify-center content-end place-content-end
                    cursor-pointer absolute inset-0 w-full h-full pl-16 pt-36 opacity-0 outline-none file:w-0 file:h-0">
                </span>

            </form>
        </div>
    </div>
</div>
<script>
    function clickSubmit() {
        document.getElementById('fileSubmitButton').classList.add('animate-ping2')
    }
</script>